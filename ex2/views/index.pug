extends layout

block content
  .w3-card-4 
    header.w3-container.w3-teal 
        h1 
            span Lista de Contratos

    .w3-container
        table.w3-table-all
          tr
            th Id_contrato 
            th objetoContrato 
            th dataCelebracaoContrato
            th precoContratual 
            th NIPC_entidade 
            th Entidade 
          each contrato in lContratos
            tr
              td
                a(href="/" + contrato._id)= contrato._id
              td= contrato.objectoContrato
              td= contrato.dataCelebracaoContrato
              td= contrato.precoContratual
              td= contrato.NIPC_entidade_comunicante
              td
                a(href="/entidades/" + contrato.entidade_comunicante)= contrato.entidade_comunicante
